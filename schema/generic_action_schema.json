{
    "//comment": "appliesTo and generated are metadata that are not supported for type checking by JSON schema",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://schemas.openearth.org/cap/generic_action_schema.json",
    "title": "Climate Action Priorization Schema",
    "description": "Schema for defining climate actions with adaptation and mitigation properties",
    "type": "object",
    "properties": {
        "ActionID": {
            "type": "string",
            "description": "Unique identifier for each action",
            "appliesTo": ["mitigation", "adaptation"],
            "generated": true
        },
        "ActionName": {
            "type": "string",
            "description": "Descriptive name of the action",
            "appliesTo": ["mitigation", "adaptation"],
            "generated": false
        },
        "ActionType": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": ["mitigation", "adaptation"]
            },
            "default": ["mitigation", "adaptation"],
            "description": "Specifies whether the action is a Mitigation or Adaptation action.",
            "generated": false,
            "appliesTo": ["mitigation", "adaptation"]
        },
        "AdaptationCategory": {
            "type": ["string", "null"],
            "description": "Specifies the category of adaptation action",
            "appliesTo": ["adaptation"],
            "generated": false
        },
        "Hazard": {
            "type": ["array", "null"],
            "items": {
                "type": "string",
                "enum": ["droughts", "heatwaves", "floods", "sea-level-rise", "landslides", "storms", "wildfires", "diseases"]
            },
            "description": "The hazard the adaptation action is aligned with",
            "appliesTo": ["adaptation"],
            "generated": false
        },
        "Sector": {
            "type": ["array", "null"],
            "items": {
                "type": "string",
                "enum": [
                    "stationary_energy", "transportation", "waste", "ippu", "afolu", 
                    "water_resources", "food_security", "energy_security", "biodiversity", "public_health", "railway_infrastructure", "road_infrastructure", "port_infrastructure","geo-hydrological_disasters"
                ]
            },
            "description": "The sector to which the action belongs.",
            "appliesTo": ["mitigation", "adaptation"],
            "generated": false
        },
        "Subsector": {
            "type": ["array", "null"],
            "items": {
                "type": "string",
                "enum": [
                    "residential_buildings", "commercial_and_institutional_buildings_and_facilities",
                    "manufacturing_industries_and_construction", "energy_industries",
                    "energy_generation_supplied_to_the_grid", "agriculture_forestry_and_fishing_activities",
                    "non-specified_sources", "fugitive_emissions_from_mining_processing_storage_and_transportation_of_coal",
                    "fugitive_emissions_from_oil_and_natural_gas_systems",
                    "on-road", "railways", "waterborne_navigation", "aviation", "off-road",
                    "disposal_of_solid_waste_generated_in_the_city", "disposal_of_solid_waste_generated_outside_the_city",
                    "biological_treatment_of_waste_generated_in_the_city", "biological_treatment_of_waste_generated_outside_the_city",
                    "incineration_and_open_burning_of_waste_generated_in_the_city",
                    "incineration_and_open_burning_of_waste_generated_outside_the_city",
                    "wastewater_generated_in_the_city", "wastewater_generated_outside_the_city",
                    "industrial_processes", "product_use",
                    "livestock", "land", "aggregate_sources_and_non-co2_emission_sources_on_land",
                    "all"
                ]
            },
            "description": "The subsector the mitigation action is aligned with",
            "appliesTo": ["mitigation"],
            "generated": false
        },
        "PrimaryPurpose": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": ["ghg_reduction", "climate_resilience"]
            },
            "description": "The main goal of the action, e.g., GHG Reduction, Climate Resilience.",
            "appliesTo": ["mitigation", "adaptation"],
            "generated": false
        },
        "InterventionType": {
            "type": ["array", "null"],
            "items": {
                "type": "string",
                "enum": ["taxes_and_fees", "incentives_and_subsidies", "regulations_and_laws", "programs_and_initiatives", "infrastructure_investments"]
            },
            "description": "Specifies the intervention category enabling the activity shift for mitigation actions",
            "appliesTo": ["mitigation"],
            "generated": true
        },
        "Description": {
            "type": ["string", "null"],
            "description": "Detailed description of the action",
            "appliesTo": ["mitigation", "adaptation"],
            "generated": false
        },
        "BehaviouralChangeTargeted": {
            "type": "string",
            "description": "Describes the behavioural change encouraged by the intervention",
            "appliesTo": ["mitigation"],
            "generated": true
        },
        "CoBenefits": {
            "type": "object",
            "properties": {
                "air_quality": {
                    "oneOf": [
                        { "type": "number", "enum": [-2, -1, 0, 1, 2] },
                        { "type": "null" }
                    ]
                },
                "water_quality": {
                    "oneOf": [
                        { "type": "number", "enum": [-2, -1, 0, 1, 2] },
                        { "type": "null" }
                    ]
                },
                "habitat": {
                    "oneOf": [
                        { "type": "number", "enum": [-2, -1, 0, 1, 2] },
                        { "type": "null" }
                    ]
                },
                "cost_of_living": {
                    "oneOf": [
                        { "type": "number", "enum": [-2, -1, 0, 1, 2] },
                        { "type": "null" }
                    ]
                },
                "housing": {
                    "oneOf": [
                        { "type": "number", "enum": [-2, -1, 0, 1, 2] },
                        { "type": "null" }
                    ]
                },
                "mobility": {
                    "oneOf": [
                        { "type": "number", "enum": [-2, -1, 0, 1, 2] },
                        { "type": "null" }
                    ]
                },
                "stakeholder_engagement": {
                    "oneOf": [
                        { "type": "number", "enum": [-2, -1, 0, 1, 2] },
                        { "type": "null" }
                    ]
                }
            },
            "description": "Additional benefits beyond the primary objective",
            "appliesTo": ["mitigation", "adaptation"],
            "generated": false
        },
        "EquityAndInclusionConsiderations": {
            "type": ["string", "null"],
            "description": "How the action promotes equity and inclusion, focusing on vulnerable or underserved communities",
            "appliesTo": ["mitigation", "adaptation"],
            "generated": true
        },
        "GHGReductionPotential": {
            "type": ["object", "null"],
            "properties": {
                "stationary_energy": {
                    "oneOf": [
                        { "type": "string", "enum": ["0-19", "20-39", "40-59", "60-79", "80-100"] },
                        { "type": "null" }
                    ],
                    "description": "Potential for GHG reduction in the energy sector."
                },
                "transportation": {
                    "oneOf": [
                        { "type": "string", "enum": ["0-19", "20-39", "40-59", "60-79", "80-100"] },
                        { "type": "null" }
                    ],
                    "description": "Potential for GHG reduction in the transportation sector."
                },
                "waste": {
                    "oneOf": [
                        { "type": "string", "enum": ["0-19", "20-39", "40-59", "60-79", "80-100"] },
                        { "type": "null" }
                    ],
                    "description": "Potential for GHG reduction in the waste sector."
                },
                "ippu": {
                    "oneOf": [
                        { "type": "string", "enum": ["0-19", "20-39", "40-59", "60-79", "80-100"] },
                        { "type": "null" }
                    ],
                    "description": "Potential for GHG reduction in the industrial processes and product (ippu) sector."
                },
                "afolu": {
                    "oneOf": [
                        { "type": "string", "enum": ["0-19", "20-39", "40-59", "60-79", "80-100"] },
                        { "type": "null" }
                    ],
                    "description": "Potential for GHG reduction in the agriculture, forestry and other land use (afolu) sector."
                }
            },
            "appliesTo": ["mitigation"],
            "generated": false
        },
        "AdaptationEffectiveness": {
            "oneOf": [
                {
                    "type": "string",
                    "enum": ["high", "medium", "low"]
                },
                {
                    "type": "null"
                }
            ],
            "description": "The effectiveness of the adaptation action to climate risks",
            "appliesTo": ["adaptation"],
            "generated": true
        },
        "CostInvestmentNeeded": {
            "oneOf": [
                {
                    "type": "string",
                    "enum": ["high", "medium", "low"]
                },
                {
                    "type": "null"
                }
            ],
            "description": "The financial viability of the action",
            "appliesTo": ["mitigation", "adaptation"],
            "generated": false
        },
        "TimelineForImplementation": {
            "oneOf": [
                {
                    "type": "string",
                    "enum": ["<5 years", "5-10 years", ">10 years"]
                },
                {
                    "type": "null"
                }
            ],
            "description": "Estimated time required to fully implement the action",
            "appliesTo": ["adaptation", "mitigation"],
            "generated": false
        },
        "Dependencies": {
            "type": ["array", "null"],
            "items": {"type": "string"},
            "description": "Dependencies or prerequisites for the action to succeed",
            "appliesTo": ["mitigation", "adaptation"],
            "generated": true
        },
        "KeyPerformanceIndicators": {
            "type": ["array", "null"],
            "items": {"type": "string"},
            "description": "Metrics to measure the success of the action",
            "appliesTo": ["mitigation", "adaptation"],
            "generated": true
        },
        "Impacts": {
            "type": ["array", "null"],
            "items": {"type": "string"},
            "description": "Broader impacts, such as increased urban livability or improved public health",
            "appliesTo": ["mitigation", "adaptation"],
            "generated": true
        }
    },
    "required": ["ActionID", "ActionName", "ActionType", "Description"]
}